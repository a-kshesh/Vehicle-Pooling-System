@model IEnumerable<VehicalPoolingSystem.Models.Bookings>
@{
    ViewData["Title"] = "Bookings";
    Layout = "_VehicleHostLayout";
}

<div class="row">
    <div class="col-md-12 m-b-30">
        <div class="d-block d-sm-flex flex-nowrap align-items-center">
            <div class="page-title mb-2 mb-sm-0">
                <h1>Booked Vehicle</h1>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card card-statistics">
            <div class="card-body">
                <table class="table mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Car</th>
                            <th scope="col">User</th>
                            <th scope="col">Trip Start</th>
                            <th scope="col">Trip End</th>
                            <th scope="col">Pickup|Return</th>
                            <th scope="col">Total Charges</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Bookings b in Model)
                        {
                            <tr>
                                <td>@b.Vehicle.Company @b.Vehicle.Model @b.Vehicle.ManufacturingYear</td>
                                <td>@b.User.FirstName @b.User.LastName</td>
                                <td>@b.TripStart</td>
                                <td>@b.TripEnd</td>
                                <td>@b.PickupAddress</td>
                                <td>
                                    @if (@b.TotalCharges != 0)
                                    {
                                        @b.TotalCharges.ToString("0.00")
                                    }
                                </td>
                                <td class="@b.Status">@b.Status</td>
                                <td>
                                    @if (@b.Status == "Returned")
                                    {
                                    <a class="btn btn-secondary" asp-action="Acknowledge" asp-route-bookingId="@b.BookingId">
                                        Confirm
                                    </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


