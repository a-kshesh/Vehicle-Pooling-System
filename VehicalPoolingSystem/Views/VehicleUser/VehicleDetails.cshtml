@model VehicalPoolingSystem.Models.ViewModels.VehicleUserVehicleDetailsViewModel;
@{
    ViewData["Title"] = "VehicleDetails";
    Layout = "_VehicleHostLayout";
}

<div class="card card-statistics">
    <div class="card-body p-0">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/uploads/@Model.Vehicles.Image2Name" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/uploads/@Model.Vehicles.Image2Name" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/uploads/@Model.Vehicles.Image3Name" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="row pt-4">
            <div class="col-lg-2"> </div>
            <div class="col-lg-4">
                <div class="row">
                    <label class="col-lg-3 col-form-label">The Car</label>
                    <div class="col-lg-9">
                        <h1>@Model.Vehicles.Company @Model.Vehicles.Model </h1>
                    </div>
                </div>
                <div class="row">
                    <label class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">
                        <h1>@Model.Vehicles.ManufacturingYear</h1>
                    </div>
                </div>
                <div class="row">
                    <label class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">
                        <h4>5.0<i class="fa fa-star"></i><span> (108 trips)</span></h4>
                    </div>
                </div>
                <div class="row">
                    <label class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">
                        <div class="row">
                            <i class="col-lg-2 fa fa-folder fa-4x"></i>
                            <span class="col-lg-3">@Model.Vehicles.VehicleIgnition</span>
                            <span class="col-lg-2"></span>
                            <span class="col-lg-2">
                                <i class="fa fa-folder fa-4x"></i>
                            </span>    
                                <span class="col-lg-4">@Model.Vehicles.VehicleDoors</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <label class="col-lg-3 col-form-label"></label>
                    <div class="col-lg-9">
                        <div class="row">
                            <span class="col-lg-2"><i class="fa fa-wheelchair fa-4x"></i></span>
                            <span class="col-lg-3">@Model.Vehicles.VehicleSeats</span>
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <label class="col-lg-3 col-form-label">Hosted By</label>
                    <div class="col-lg-9">
                        <h1>@Model.Vehicles.OwnerName</h1>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="row">
                    <h1>$@Model.Vehicles.CostPerDay/day</h1>
                </div>
                <form asp-action="BookVehicle" method="post">
                    <input type="hidden" asp-for="@Model.Bookings.VehicleId" value="@Model.Vehicles.VehicleId"/>
                    <input type="hidden" asp-for="@Model.Bookings.CostPerDay" value="@Model.Vehicles.CostPerDay"/>
                    <input type="hidden" asp-for="@Model.Bookings.AdditionalDistanceFee" value="@Model.Vehicles.AdditionalDistanceFee"/>
                    <input type="hidden" asp-for="@Model.Bookings.DistanceIncluded" value="@Model.Vehicles.DistanceIncluded"/>
                    <div class="form-group row">
                        <label>Trip Start</label>
                        <input type="datetime-local" class="form-control" asp-for="@Model.Bookings.TripStart" />
                    </div>
                    <div class="form-group row">
                        <label>Trip End</label>
                        <input type="datetime-local" class="form-control" asp-for="@Model.Bookings.TripEnd" />
                    </div>
                    <div class="form-group row">
                        <label>Pickup & Return Location</label>
                        <input type="text" class="form-control" asp-for="@Model.Bookings.PickupAddress" value="@Model.Vehicles.PickupCity, @Model.Vehicles.PickupState @Model.Vehicles.PickupZipCode" />
                    </div>
                    <div class="form-group row">
                        <button type="submit" class="form-control btn btn-primary">Book</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-2"> </div>
        </div>
    </div>
</div>

